{
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      // realms
      "~collages/*": ["./src/realms/collages/*"],
      "~auth/*": ["./src/realms/auth/*"],
      // common
      "@utils/*": ["./src/utils/*"],
      "@services/*": ["./src/services/*"],
      "@types/*": ["./src/types/*"],

      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "outDir": "dist"
}
